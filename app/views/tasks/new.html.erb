<h1> New task </h1>
<%= form_with model: @task, class: "task-form" do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_area :details, class: "form-control" %>
  </div>

  <div>
    <%= f.submit "Create Task", class: "btn" %>
  </div>

  <p><%= link_to "Back to list", tasks_path, class: "back-link" %></p>
<% end %>